<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real Time Colors</title>
    <script
    src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' type='text/css' href='style.css'>
    
    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type='text/javascript'>
        $(document).ready(function(){
            const socket = io();
            socket.emit('connected');
            socket.on('updateAllClients', function(data){
                    document.body.style.backgroundColor = data.color;
        });
        $('#green').click(function(){
            socket.emit('green');
        });
        $('#blue').click(function(){
            socket.emit('blue');
        });
        $('#pink').click(function(){
            socket.emit('pink');
            });
        })
        </script>
</head>
<body>
    <div class='container'>
        <h1 class='colors'>Real Time Colors</h1>
        <h3>Choose Background!</h3>

        <button id='green' type='button' class='btn btn-success btn-lg'>Green</button>
        <button id='blue' type='button' class='btn btn-primary btn-lg'>Blue</button>
        <button id='pink' type='button' class='btn btn-danger btn-lg'>Pink</button>
    </div>
</body>
</html>